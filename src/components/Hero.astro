<section id="hero" class="w-full relative min-h-[800px] bg-[#303030] overflow-hidden flex items-center justify-center py-[4rem]">
  <!-- Background Image with Blur Effect -->
  <div 
    class="absolute inset-0 w-full h-[1081px] -top-[141px] bg-hero-pattern bg-cover bg-center blur-[10px]"
    style="background-image: url('./images/bg_hero.avif');"
  ></div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col items-center gap-12 h-auto px-5 pb-[50px] justify-center">
    <!-- Logo Image -->
    <div class="w-full max-w-[30em] md:w-[36em] md:max-w-[auto]">
      <img src="./images/logo_game.avif" alt="">
    </div>

    <!-- Call to Action Card -->
    <div class=" w-full flex items-start justify-between gap-[1.5rem] bg-terceary rounded-bl-[16px] rounded-tr-[16px] border border-white p-4 md:max-w-[48rem] md:justify-center md:items-center">

      <div class="w-full md:w-[40%]">
        <img class="w-full rounded-lg object-cover" src="./images/game_portrait.avif" alt="">
      </div>
      
      <div class="w-full flex flex-col items-start gap-[1rem] md:flex-row md:items-center">
        <p class="font-[Poppins] font-normal text-[1rem] text-white">
          Could you manage an ingredient-less bar? Us neither, but. Where...
        </p>
  
        <a href="https://sleepy-capybara.itch.io/spiritsbar" target="_blank" class="w-full flex justify-center bg-[#E86761] text-white font-[gobernador] text-3xl px-8 py-2 hover:bg-[#E86761]/90 transition-colors">
          Play Now
        </a>
      </div>
    </div>

  </div>
</section>
